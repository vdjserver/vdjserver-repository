[Unit]
Description=VDJServer Repository Services
Documentation=https://bitbucket.org/vdjserver/vdjserver-repository
After=docker.service
Requires=docker.service

[Service]
Restart=always
ExecStartPre=/usr/local/bin/docker-compose -f /var/www/docker/vdjserver/vdjserver-repository/docker-compose/run/docker-compose.yml stop
ExecStart=/usr/local/bin/docker-compose -f /var/www/docker/vdjserver/vdjserver-repository/docker-compose/run/docker-compose.yml up
ExecStop=/usr/local/bin/docker-compose -f /var/www/docker/vdjserver/vdjserver-repository/docker-compose/run/docker-compose.yml down

[Install]
WantedBy=multi-user.target
